<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Deltra\ShopConnectorMB\Utils\DeltraUtils" />
        <service id="Deltra\ShopConnectorMB\Utils\DeltraEncrypt" />
        
        <service id="Deltra\ShopConnectorMB\Utils\DeltraTax">
            <argument type="service" id="product.repository" />
        </service>

        <service id="Deltra\ShopConnectorMB\Utils\DeltraResponses">
            <argument type="service" id="Deltra\ShopConnectorMB\Utils\DeltraEncrypt" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="Deltra\ShopConnectorMB\Service\DeltraProductService">
            <argument type="service" id="Deltra\ShopConnectorMB\Utils\DeltraUtils" />
            <argument type="service" id="Deltra\ShopConnectorMB\Utils\DeltraTax" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="tax.repository" />
            <argument type="service" id="product_manufacturer.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="Deltra\ShopConnectorMB\Service\DeltraOrderService">
            <argument type="service" id="Deltra\ShopConnectorMB\Utils\DeltraUtils" />
            <argument type="service" id="Deltra\ShopConnectorMB\Utils\DeltraTax" />
            <argument type="service" id="order.repository" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="state_machine_state.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="Deltra\ShopConnectorMB\Controller\MbController" public="true">
            <argument type="service" id="Deltra\ShopConnectorMB\Utils\DeltraResponses" />
            <argument type="service" id="Deltra\ShopConnectorMB\Service\DeltraProductService" />
            <argument type="service" id="Deltra\ShopConnectorMB\Service\DeltraOrderService" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Deltra\ShopConnectorMB\Subscriber\ControllerSubscriber">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>