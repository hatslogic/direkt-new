{% sw_extends '@Storefront/storefront/page/product-detail/configurator/select.html.twig' %}

{% block page_product_detail_configurator_group_select_title %}
        <label class="product-detail-configurator-group-title" for="{{ group.id }}">
            {% block page_product_detail_configurator_group_title_text %}
                {{ group.translated.name }}
            {% endblock %}
        </label>
        {% block page_product_detail_configurator_select %}
        <select name="{{ group.id }}" id="{{ group.id }}" class="form-select product-detail-configurator-select-input">
            
            {% set isSelected = page.product.optionIds is not empty %}
            {# <option value="" disabled {% if not isSelected %} selected="selected" {% endif %}>{{ group.translated.name }}</option> #}
            
            {% for option in group.options %}
                <option value="{{ option.id }}"{% if option.id in page.product.optionIds and isSelected %} selected="selected"{% endif %}>
                    {{ option.translated.name }}
                </option>
            {% endfor %}
        </select>
    {% endblock %}
{% endblock %}
