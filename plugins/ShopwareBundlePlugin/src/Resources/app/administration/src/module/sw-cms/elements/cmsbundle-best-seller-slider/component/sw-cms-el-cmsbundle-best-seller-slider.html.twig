{% block sw_cms_element_best_seller_slider %}
	<div class="sw-cms-el-best-seller-slider" :class="classes" :style="verticalAlignStyle">
		{% block sw_cms_element_best_seller_slider_content %}
			<div class="sw-cms-el-best-seller-slider__content">

				{% block sw_cms_element_best_seller_slider_arrow_left %}
					<div v-if="hasNavigation" class="sw-cms-el-best-seller-slider__navigation">
						<sw-icon class="sw-cms-el-best-seller-slider__navigation-button" name="regular-chevron-left" size="24"/>
					</div>
				{% endblock %}

				{% block sw_cms_element_best_seller_slider_category_holder %}
					<div ref="productHolder" class="sw-cms-el-best-seller-list__product-holder"  style="flex-grow: 1;">
							{% block sw_cms_element_best_seller_list_demo_data %}
								<sw-cms-el-product-box v-for="index in sliderBoxLimit" :key="index" :element="demoCategoryElement"/>
							{% endblock %}
					</div>
				{% endblock %}

				{% block sw_cms_element_product_slider_arrow_right %}
					<div v-if="hasNavigation" class="sw-cms-el-best-seller-slider__navigation">
						<sw-icon class="sw-cms-el-best-seller-slider__navigation-button" name="regular-chevron-right" size="24"/>
					</div>
				{% endblock %}
			</div>
		{% endblock %}
	</div>
{% endblock %}
