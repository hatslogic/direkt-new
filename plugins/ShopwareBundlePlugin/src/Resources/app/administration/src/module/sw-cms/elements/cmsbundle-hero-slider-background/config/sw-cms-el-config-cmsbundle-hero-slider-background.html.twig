{% block sw_cms_element_picture_config_config %}
	<div class="sw-cms-el-config-cmsbundle-hero-slider-background">
		{% block sw_cms_element_picture_config_tabs %}
			<sw-tabs default-item="background">
				<template #default="{ active }">
					{% block sw_cms_element_picture_config_tab_image %}
						<sw-tabs-item name="background" :active-tab="active">
							{{ $tc('cmsbundle.element.general.tabs.background') }}
						</sw-tabs-item>
					{% endblock %}
					{% block sw_cms_element_picture_config_tab_setting %}
						<sw-tabs-item name="setting" :active-tab="active">
							{{ $tc('cmsbundle.element.general.tabs.settings') }}
						</sw-tabs-item>
					{% endblock %}
				</template>
				<template #content="{ active }">
					<div v-if="active === 'background'" class="sw-cms-el-config-cmsbundle-hero-slider">
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_desktop_media_upload %}
							<sw-container class="sw-cms-el-config-cmsbundle-hero-slider-field">
								<sw-cms-mapping-field v-model:config="element.config.mediaDesktop" :label="$tc('cmsbundle.element.general.config.desktop')" value-types="entity" entity="media">
									<sw-media-upload-v2 variant="regular" :upload-tag="uploadTagDesktop" :source="previewSourceDesktop" :allow-multi-select="false" :default-folder="cmsPageState.pageEntityName" :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')" @media-upload-sidebar-open="onOpenMediaModalDesktop" @media-upload-remove-image="onImageRemoveDesktop"/>
									<template #preview="{ demoValue }">
									<div class="sw-cms-el-config-image__mapping-preview">
										<img v-if="demoValue.url" :src="demoValue.url" alt="">
										<sw-alert v-else class="sw-cms-el-config-image__preview-info" variant="info">
											{{ $tc('sw-cms.detail.label.mappingEmptyPreview') }}
										</sw-alert>
									</div>
								</template>
								</sw-cms-mapping-field>
								<sw-upload-listener :upload-tag="uploadTagDesktop" auto-upload @media-upload-finish="onImageUploadDesktop"/>
							</sw-container>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_tablet_media_upload %}
							<sw-container class="sw-cms-el-config-cmsbundle-hero-slider-field">
								<sw-cms-mapping-field v-model:config="element.config.mediaTablet" :label="$tc('cmsbundle.element.general.config.tablet')" value-types="entity" entity="media">
									<sw-media-upload-v2 variant="regular" :upload-tag="uploadTagTablet" :source="previewSourceTablet" :allow-multi-select="false" :default-folder="cmsPageState.pageEntityName" :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')" @media-upload-sidebar-open="onOpenMediaModalTablet" @media-upload-remove-image="onImageRemoveTablet"/>
									<template #preview="{ demoValue }">
									<div class="sw-cms-el-config-image__mapping-preview">
										<img v-if="demoValue.url" :src="demoValue.url" alt="">
										<sw-alert v-else class="sw-cms-el-config-image__preview-info" variant="info">
											{{ $tc('sw-cms.detail.label.mappingEmptyPreview') }}
										</sw-alert>
									</div>
								</template>
								</sw-cms-mapping-field>
								<sw-upload-listener :upload-tag="uploadTagTablet" auto-upload @media-upload-finish="onImageUploadTablet"/>
							</sw-container>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_mobile_media_upload %}
							<sw-container class="sw-cms-el-config-cmsbundle-hero-slider-field">
								<sw-cms-mapping-field v-model:config="element.config.mediaMobile" :label="$tc('cmsbundle.element.general.config.mobile')" value-types="entity" entity="media">
									<sw-media-upload-v2 variant="regular" :upload-tag="uploadTagMobile" :source="previewSourceMobile" :allow-multi-select="false" :default-folder="cmsPageState.pageEntityName" :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')" @media-upload-sidebar-open="onOpenMediaModalMobile" @media-upload-remove-image="onImageRemoveMobile"/>
									<template #preview="{ demoValue }">
									<div class="sw-cms-el-config-image__mapping-preview">
										<img v-if="demoValue.url" :src="demoValue.url" alt="">
										<sw-alert v-else class="sw-cms-el-config-image__preview-info" variant="info">
											{{ $tc('sw-cms.detail.label.mappingEmptyPreview') }}
										</sw-alert>
									</div>
								</template>
								</sw-cms-mapping-field>
								<sw-upload-listener :upload-tag="uploadTagMobile" auto-upload @media-upload-finish="onImageUploadMobile"/>
							</sw-container>
						{% endblock %}

						{% block sw_cms_element_cmsbundle_hero_slider_background_config_desktop_media_modal %}
							<sw-media-modal-v2 v-if="mediaModalIsOpenDesktop" variant="full" :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')" :entity-context="cmsPageState.entityName" :allow-multi-select="false" :initial-folder-id="cmsPageState.defaultMediaFolderId" @media-upload-remove-image="onImageRemoveDesktop" @media-modal-selection-change="onSelectionChangesDesktop" @modal-close="onCloseModalDesktop"/>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_tablet_media_modal %}
							<sw-media-modal-v2 v-if="mediaModalIsOpenTablet" variant="full" :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')" :entity-context="cmsPageState.entityName" :allow-multi-select="false" :initial-folder-id="cmsPageState.defaultMediaFolderId" @media-upload-remove-image="onImageRemoveTablet" @media-modal-selection-change="onSelectionChangesTablet" @modal-close="onCloseModalTablet"/>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_mobile_media_modal %}
							<sw-media-modal-v2 v-if="mediaModalIsOpenMobile" variant="full" :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')" :entity-context="cmsPageState.entityName" :allow-multi-select="false" :initial-folder-id="cmsPageState.defaultMediaFolderId" @media-upload-remove-image="onImageRemoveMobile" @media-modal-selection-change="onSelectionChangesMobile" @modal-close="onCloseModalMobile"/>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_colour %}
							<div class="sw-cms-el-config-cmsbundle-hero-slider-colour">
								<sw-colorpicker v-model:value="element.config.colour.value" class="sw-cms-el-config-cmsbundle-hero-slider-colour" type="text" :label="$tc('cmsbundle.element.general.config.background-color')" coloroutput="auto" :alpha="true" :disabled="false" :colorlabels="true" zindex="100"/>
							</div>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_lazy_load %}
							<div class="sw-cms-el-config-cmsbundle-hero-slider-lazy-load">
								<sw-switch-field v-model:value="element.config.lazyLoad.value" class="sw-cms-el-config-cmsbundle-hero-slider-lazy-load" :label="$tc('cmsbundle.element.general.config.enable-lazy-load')" type="switch"/>
							</div>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_overlay_settings %}
							<sw-switch-field v-model:value="element.config.overlay.value" class="sw-cms-el-config-cmsbundle-hero-slider-overlay" type="switch" label="Enable Overlay"/>
						{% endblock %}
					</div>
					<div v-if="active === 'count'" class="sw-cms-el-config-product-slider__tab-content">
						<sw-select-field v-model:value="element.config.countDesktop.value" :label="$tc('cmsbundle.element.general.config.desktop-count')">
							<option value="6">
								6
							</option>
							<option value="5">
								5
							</option>
							<option value="4">
								4
							</option>
							<option value="3">
								3
							</option>
							<option value="2">
								2
							</option>
							<option value="1">
								1
							</option>
						</sw-select-field>
						<sw-select-field v-model:value="element.config.countTablet.value" :label="$tc('cmsbundle.element.general.config.tablet-count')">
							<option value="6">
								6
							</option>
							<option value="5">
								5
							</option>
							<option value="4">
								4
							</option>
							<option value="3">
								3
							</option>
							<option value="2">
								2
							</option>
							<option value="1">
								1
							</option>
						</sw-select-field>
						<sw-select-field v-model:value="element.config.countMobile.value" :label="$tc('cmsbundle.element.general.config.mobile-count')">
							<option value="6">
								6
							</option>
							<option value="5">
								5
							</option>
							<option value="4">
								4
							</option>
							<option value="3">
								3
							</option>
							<option value="2">
								2
							</option>
							<option value="1">
								1
							</option>
						</sw-select-field>
					</div>
					<div v-if="active ==='setting'" class="sw-cms-el-config-hero-slider__tab-settings">		
						{% block sw_cms_element_hero_slider_config_settings_display_mode %}
							<sw-select-field v-model:value="element.config.displayMode.value" :label="$tc('sw-cms.elements.general.config.label.displayMode')">
								<option value="standard">
									{{ $tc('sw-cms.elements.general.config.label.displayModeStandard') }}
								</option>
								<option value="cover">
									{{ $tc('sw-cms.elements.general.config.label.displayModeCover') }}
								</option>
								<option value="contain">
									{{ $tc('sw-cms.elements.general.config.label.displayModeContain') }}
								</option>
							</sw-select-field>
						{% endblock %}
						{% block sw_cms_element_hero_slider_config_settings_vertical_align %}
							<sw-select-field v-model:value="element.config.verticalAlign.value" :label="$tc('sw-cms.elements.general.config.label.verticalAlign')" :placeholder="$tc('sw-cms.elements.general.config.label.verticalAlign')">
								<option value="flex-start">
									{{ $tc('sw-cms.elements.general.config.label.verticalAlignTop') }}
								</option>
								<option value="center">
									{{ $tc('sw-cms.elements.general.config.label.verticalAlignCenter') }}
								</option>
								<option value="flex-end">
									{{ $tc('sw-cms.elements.general.config.label.verticalAlignBottom') }}
								</option>
							</sw-select-field>
						{% endblock %}
						{% block sw_cms_element_hero_slider_config_settings_box_layout %}
							<sw-select-field v-model:value="element.config.boxLayout.value" :label="$tc('sw-cms.elements.productBox.config.label.layoutType')">
								<option value="standard">
									{{ $tc('sw-cms.elements.productBox.config.label.layoutTypeStandard') }}
								</option>
								<option value="image">
									{{ $tc('sw-cms.elements.productBox.config.label.layoutTypeImage') }}
								</option>
								<option value="minimal">
									{{ $tc('sw-cms.elements.productBox.config.label.layoutTypeMinimal') }}
								</option>
							</sw-select-field>
						{% endblock %}
						{% block sw_cms_element_hero_slider_config_settings_border %}
							<sw-switch-field v-model:value="element.config.border.value" bordered :label="$tc('sw-cms.elements.productSlider.config.label.border')"/>
						{% endblock %}

						{% block sw_cms_element_hero_slider_config_settings_min_width %}
							<sw-text-field v-model:value="element.config.elMinWidth.value" :label="$tc('sw-cms.elements.productSlider.config.label.minWidth')" :placeholder="$tc('sw-cms.elements.productSlider.config.placeholder.minWidth')"/>
						{% endblock %}
						{% block sw_cms_element_cmsbundle_hero_slider_background_config_media_upload_setting %}

							{% block sw_cms_element_cmsbundle_hero_slider_background_backconfig_autoplay %}
								<div class="sw-cms-el-config-cmsbundle-hero-slider-autoplay sw-field-item">
									<sw-switch-field v-model:value="element.config.autoPlay.value" class="sw-cms-el-config-cmsbundle-hero-slider-autoplay" type="switch" :label="$tc('cmsbundle.element.general.config.enable-autoplay')"/>
								</div>
							{% endblock %}
							{% block sw_cms_element_cmsbundle_hero_slider_background_config_speed %}
								<sw-text-field v-model:value="element.config.speed.value" class="sw-cms-el-config-cmsbundle-hero-slider-speed sw-field-item" type="text" :label="$tc('cmsbundle.element.general.config.speed')"/>
							{% endblock %}

							{% block sw_cms_element_cmsbundle_hero_slider_background_backconfig_controlls %}
								<div class="sw-cms-el-config-cmsbundle-hero-slider-controlls sw-field-item">
									<sw-switch-field v-model:value="element.config.controlls.value" class="sw-cms-el-config-cmsbundle-hero-slider-controlls" type="switch" :label="$tc('cmsbundle.element.general.config.enable-controlls')"/>
								</div>
							{% endblock %}
							{% block sw_cms_element_cmsbundle_hero_slider_background_backconfig_dots %}
								<div class="sw-cms-el-config-cmsbundle-hero-slider-dots sw-field-item">
									<sw-switch-field v-model:value="element.config.dots.value" class="sw-cms-el-config-cmsbundle-hero-slider-dots" type="switch" :label="$tc('cmsbundle.element.general.config.enable-dots')"/>
								</div>
							{% endblock %}

							{% block sw_cms_element_cmsbundle_hero_slider_background_config_loop %}
								<div class="sw-cms-el-config-cmsbundle-hero-slider-loop sw-field-item">
									<sw-switch-field v-model:value="element.config.loop.value" class="sw-cms-el-config-cmsbundle-hero-slider-loop" type="switch" :label="$tc('cmsbundle.element.general.config.enable-loop')"/>
								</div>
							{% endblock %}
						{% endblock %}
					</div>
				</template>
			</sw-tabs>
		{% endblock %}
	</div>
{% endblock %}
