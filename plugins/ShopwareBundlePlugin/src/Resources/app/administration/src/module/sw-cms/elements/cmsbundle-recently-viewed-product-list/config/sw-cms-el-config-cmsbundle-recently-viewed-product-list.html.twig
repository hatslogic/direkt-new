{% block sw_cms_element_recently_viewed_product_list_config %}
	<div class="sw-cms-el-config-recently-viewed-product-list">

		{% block sw_cms_element_recently_viewed_product_list_config_tabs %}
			<sw-tabs position-identifier="sw-cms-element-config-recently-viewed-product-list" class="sw-cms-el-config-recently-viewed-product-list__tabs" default-item="count">
				<template #default="{ active }">
					{% block sw_cms_element_recently_viewed_product_list_config_tab_count %}
						<sw-tabs-item :title="$tc('cmsbundle.element.general.config.tabs.count')" name="count" :active-tab="active">
							{{ $tc('cmsbundle.element.general.tabs.count') }}
						</sw-tabs-item>
					{% endblock %}

					{% block sw_cms_element_recently_viewed_product_list_config_tab_options %}
						<sw-tabs-item :title="$tc('sw-cms.elements.general.config.tab.settings')" name="settings" :active-tab="active">
							{{ $tc('sw-cms.elements.general.config.tab.settings') }}
						</sw-tabs-item>
					{% endblock %}
				</template>

				<template #content="{ active }">

					{% block sw_cms_element_recently_viewed_product_list_config_settings %}
						<sw-container v-if="active === 'settings'" class="sw-cms-el-config-recently-viewed-product-list__tab-settings">

							{% block sw_cms_element_recently_viewed_product_list_config_settings_display_mode %}
								<sw-select-field v-model:value="element.config.displayMode.value" :label="$tc('sw-cms.elements.general.config.label.displayMode')">
									<option value="standard">
										{{ $tc('sw-cms.elements.general.config.label.displayModeStandard') }}
									</option>
									<option value="cover">
										{{ $tc('sw-cms.elements.general.config.label.displayModeCover') }}
									</option>
									<option value="contain">
										{{ $tc('sw-cms.elements.general.config.label.displayModeContain') }}
									</option>
								</sw-select-field>
							{% endblock %}

							{% block sw_cms_element_recently_viewed_product_list_config_settings_vertical_align %}
								<sw-select-field v-model:value="element.config.verticalAlign.value" :label="$tc('sw-cms.elements.general.config.label.verticalAlign')" :placeholder="$tc('sw-cms.elements.general.config.label.verticalAlign')">
									<option value="flex-start">
										{{ $tc('sw-cms.elements.general.config.label.verticalAlignTop') }}
									</option>
									<option value="center">
										{{ $tc('sw-cms.elements.general.config.label.verticalAlignCenter') }}
									</option>
									<option value="flex-end">
										{{ $tc('sw-cms.elements.general.config.label.verticalAlignBottom') }}
									</option>
								</sw-select-field>
							{% endblock %}


							{% block sw_cms_element_recently_viewed_product_list_config_settings_box_layout %}
								<sw-select-field v-model:value="element.config.boxLayout.value" :label="$tc('sw-cms.elements.productBox.config.label.layoutType')">
									<option value="standard">
										{{ $tc('sw-cms.elements.productBox.config.label.layoutTypeStandard') }}
									</option>
									<option value="image">
										{{ $tc('sw-cms.elements.productBox.config.label.layoutTypeImage') }}
									</option>
									<option value="minimal">
										{{ $tc('sw-cms.elements.productBox.config.label.layoutTypeMinimal') }}
									</option>
								</sw-select-field>
							{% endblock %}


							{% block sw_cms_element_recently_viewed_product_list_config_settings_border %}
								<sw-switch-field v-model:value="element.config.border.value" bordered :label="$tc('sw-cms.elements.productSlider.config.label.border')"/>
							{% endblock %}


							{% block sw_cms_element_recently_viewed_product_list_config_settings_limit %}
								<sw-number-field v-model:value="element.config.productsPerPage.value" :label="$tc('cmsbundle.element.general.config.productsPerPage')"/>
							{% endblock %}
						</sw-container>
						<sw-container v-if="active === 'count'" class="sw-cms-el-config-recently-viewed-product-list__tab-content">
							<sw-select-field v-model:value="element.config.countDesktop.value" :label="$tc('cmsbundle.element.general.config.desktop-count')">
								<option value="6">
									6
								</option>
								<option value="5">
									5
								</option>
								<option value="4">
									4
								</option>
								<option value="3">
									3
								</option>
								<option value="2">
									2
								</option>
								<option value="1">
									1
								</option>
							</sw-select-field>
							<sw-select-field v-model:value="element.config.countTablet.value" :label="$tc('cmsbundle.element.general.config.tablet-count')">
								<option value="6">
									6
								</option>
								<option value="5">
									5
								</option>
								<option value="4">
									4
								</option>
								<option value="3">
									3
								</option>
								<option value="2">
									2
								</option>
								<option value="1">
									1
								</option>
							</sw-select-field>
							<sw-select-field v-model:value="element.config.countMobile.value" :label="$tc('cmsbundle.element.general.config.mobile-count')">
								<option value="6">
									6
								</option>
								<option value="5">
									5
								</option>
								<option value="4">
									4
								</option>
								<option value="3">
									3
								</option>
								<option value="2">
									2
								</option>
								<option value="1">
									1
								</option>
							</sw-select-field>
						</sw-container>
					{% endblock %}
				</template>
			</sw-tabs>
		{% endblock %}
	</div>
{% endblock %}
