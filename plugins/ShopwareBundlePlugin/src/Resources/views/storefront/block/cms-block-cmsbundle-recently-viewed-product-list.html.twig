{% block block_cmsbundle_recently_viewed_product_list %}
	<div class="recently-viewed-product-list-wrapper padding-top padding-bottom">
		{% block block_recently_viewed_product_list_foreground %}
			<div class="recently-viewed-product-list__foreground">
				<div class="container">
					{% block block_cmsbundle_recently_viewed_product_list_title %}
						{% set element = block.slots.getSlot('title') %}
						{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing  %}
					{% endblock %}

					{% block block_recently_viewed_product_list_products %}
						{% set element = block.slots.getSlot('product') %}
						{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing  %}
					{% endblock %}

					{% block block_cmsbundle_recently_viewed_product_list_button %}
						{% set element = block.slots.getSlot('button') %}
						{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing  %}
					{% endblock %}
				</div>
			</div>
		{% endblock %}
		{% block block_product_list_background %}
			<div class="recently-viewed-product-list__background {% if isBgImage %} position-absolute top-0 bottom-0 start-0 w-100 {% else %}position-absolute {% endif %}  top-0 start-0 w-100 h-100" style="z-index: -2">
				{% set element = block.slots.getSlot('background') %}
				{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
			</div>
		{% endblock %}
	</div>
{% endblock %}
