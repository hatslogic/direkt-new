{% block block_cmsbundle_subcategory_slider %}
	<div class="subcategory-slider-wrapper padding-top padding-bottom">
		{% block block_subcategory_slider_foreground %}
			<div class="subcategory-slider__foreground text-white">
				<div class="row">
					<div class="container p-0">
						{% block block_cmsbundle_subcategory_slider_title %}
							{% set element = block.slots.getSlot('title') %}
							{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing  %}
						{% endblock %}

						{% block block_subcategory_slider_products %}
							{% set element = block.slots.getSlot('subcategory') %}
							{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing  %}
						{% endblock %}

						{% block block_cmsbundle_subcategory_slider_button %}
							{% set element = block.slots.getSlot('button') %}
							{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing  %}
						{% endblock %}
					</div>
				</div>
			</div>
		{% endblock %}
		{% block block_product_slider_background %}
			<div class="subcategory-slider__background">
				{% set element = block.slots.getSlot('background') %}
				{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
			</div>
		{% endblock %}
	</div>
{% endblock %}
