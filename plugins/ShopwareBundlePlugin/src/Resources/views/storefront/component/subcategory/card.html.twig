{% block component_subcategory_box_include %}
	{% if layout is empty %}
		{% set layout = 'standard' %}
	{% endif %}

	{% set sizes = {
        'xs': '500px',
        'sm': '315px',
        'md': '390px',
        'lg': '350px',
        'xl': '280px'
    } %}

	{% if layout == 'image' %}
		{% set sizes = {
            'xs': '500px',
            'sm': '500px',
            'md': '390px',
            'lg': '350px',
            'xl': '280px'
        } %}
	{% endif %}

	{% block component_subcategory_box %}
		{% if subcategory %}
			{% set name = subcategory.translated.name %}
			{% set id = subcategory.id %}
			{% set cover = subcategory.media %}

			<div class="card product-box box-{{ layout }}">
				{% block component_subcategory_box_content %}
					<div class="card-body">

						{% block component_subcategory_box_image %}
							<div
								class="product-image-wrapper">
								{# fallback if display mode is not set #}
								{% set displayMode = displayMode ?: 'standard' %}

								{# set display mode 'cover' for box-image with standard display mode #}
								{% if layout == 'image' and displayMode == 'standard' %}
									{% set displayMode = 'cover' %}
								{% endif %}

								{% block component_subcategory_box_image_link %}
									<a href="{{ category_url(subcategory) }}" title="{{ name }}" class="product-image-link is-{{ displayMode }}">
										{% block component_subcategory_box_image_link_inner %}
											{% if cover.url %}
												{% set attributes = {
                                                'class': 'product-image is-'~displayMode,
                                                'alt': (cover.translated.alt ?: name),
                                                'title': (cover.translated.title ?: name),
                                                'loading': 'lazy'
                                            } %}

												{% if displayMode == 'cover' or displayMode == 'contain' %}
													{% set attributes = attributes|merge({ 'data-object-fit': displayMode }) %}
												{% endif %}

												{% block component_subcategory_box_image_thumbnail %}
													{% sw_thumbnails 'product-image-thumbnails' with {
                                                    media: cover,
                                                    sizes: sizes
                                                } %}
												{% endblock %}
											{% else %}
												{% block component_subcategory_box_image_placeholder %}
													<div class="product-image-placeholder">
														{% sw_icon 'placeholder' style {
                                                        'size': 'fluid'
                                                    } %}
													</div>
												{% endblock %}
											{% endif %}
										{% endblock %}
									</a>
								{% endblock %}

							</div>
						{% endblock %}

						{% block component_subcategory_box_info %}
							<div class="product-info">

								{% block component_subcategory_box_name %}
									<a href="{{ category_url(subcategory) }}" class="product-name" title="{{ name }}">
										{{ name }}
									</a>
									{% if element.config.showDescription.value %}
										<div class="subcategory-description">
											{{ subcategory.translated.description|striptags|raw }}
										</div>
									{% endif %}
								{% endblock %}

							</div>
						{% endblock %}
					</div>
				{% endblock %}
			</div>
		{% endif %}
	{% endblock %}

{% endblock %}
